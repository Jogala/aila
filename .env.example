# Core AILA Configuration
AILA_ANTHROPIC_API_KEY="<your_anthropic_api_key_here>"
AILA_OPENAI_API_KEY="<your_openai_api_key_here>"

# Optional: Override default paths
AILA_PROMPT_TEMPLATES_DIR=prompt_templates
AILA_DATA_DIR=data
AILA_RESULTS_DIR=results
AILA_LOG_LLM_RESPONSE=true
AILA_PATH_LOGGING_LLM_RESPONSES=logs/llm_responses.log

# API Configuration
AILA_API_FAST_API_PORT=8000
AILA_API_FAST_API_HOST=localhost

# CORS (safe defaults)
# Comma-separated list of allowed origins (leave empty to disable cross-origin)
# Example for local dev with separate frontend and API:
# AILA_CORS_ALLOW_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
AILA_CORS_ALLOW_ORIGINS=
# Whether to allow credentials (cookies/HTTP auth). Keep false unless required.
AILA_CORS_ALLOW_CREDENTIALS=false

# Trusted hosts (for Host header validation)
# Comma-separated exact hosts. Include your Railway domain and any custom domain.
# Recommended for prod: AILA_TRUSTED_HOSTS=web-production-e62f7.up.railway.app
# Include localhost for local development if needed.
# Example: AILA_TRUSTED_HOSTS=web-production-e62f7.up.railway.app,localhost,127.0.0.1
AILA_TRUSTED_HOSTS=

# Deployment Environment  
# Options: development, staging, production
AILA_ENVIRONMENT=development

# Frontend
# Timeout for browser requests to the API (ms)
# Increase if analyses with larger PDFs take longer in staging/production
AILA_FRONTEND_REQUEST_TIMEOUT_MS=180000
